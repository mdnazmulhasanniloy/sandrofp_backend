<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Banana Token Purchase Successful</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lottie-web/5.12.2/lottie.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
      rel="stylesheet"
    />
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
          sans-serif;
        background: linear-gradient(135deg, #367f55 0%, #fff7cc 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 4vw;
        position: relative;
      }

      .success-container {
        background: #ffffff;
        border-radius: 16px;
        padding: 5vw;
        text-align: center;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        max-width: 90vw;
        width: 100%;
        max-width: 500px;
        position: relative;
        z-index: 1;
      }

      .success-container::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #367f55, #367f55);
      }

      .animation-container {
        width: 30vw;
        max-width: 120px;
        height: 30vw;
        max-height: 120px;
        margin: 0 auto 4vw;
        position: relative;
        z-index: 0;
      }

      .success-animation {
        width: 100%;
        height: 100%;
      }

      .congratulation-animation {
        width: 100vw;
        height: 100vh;
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) scale(0);
        opacity: 0;
        pointer-events: none;
        transition:
          transform 0.8s ease-out,
          opacity 0.8s ease-out;
        z-index: 9999;
        animation: confetti 0.5s ease-out forwards;
      }

      h1 {
        color: #1f2937;
        font-size: clamp(20px, 6vw, 26px);
        font-weight: 700;
        margin-bottom: 2vw;
        line-height: 1.2;
      }

      .subtitle {
        color: #6b7280;
        font-size: clamp(14px, 4vw, 15px);
        margin-bottom: 6vw;
        line-height: 1.5;
      }

      .transaction-details {
        background: #fff7cc;
        border-radius: 12px;
        padding: 4vw;
        margin-bottom: 6vw;
        text-align: left;
      }

      .detail-row {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 3vw;
      }

      .detail-row:last-child {
        margin-bottom: 0;
        padding-top: 3vw;
        border-top: 1px solid #e5e7eb;
        font-weight: 600;
      }

      .detail-label {
        color: #6b7280;
        font-size: clamp(12px, 3.5vw, 13px);
      }

      .detail-value {
        color: #1f2937;
        font-size: clamp(12px, 3.5vw, 13px);
        font-weight: 500;
      }

      .amount {
        color: #367f55;
        font-size: clamp(14px, 4vw, 16px);
        font-weight: 700;
      }

      .button-group {
        display: flex;
        justify-content: center;
        gap: 4vw;
      }

      .btn {
        padding: 2.5vw 5vw;
        border-radius: 8px;
        font-size: clamp(12px, 3.5vw, 13px);
        font-weight: 600;
        text-decoration: none;
        transition: all 0.2s ease;
        cursor: pointer;
        border: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: 2vw;
        min-width: 120px;
      }

      .btn-primary {
        background: #367f55;
        color: white;
      }

      .btn-primary:hover {
        background: #2a5f3f;
        transform: translateY(-1px);
      }

      .fade-in {
        animation: fadeIn 0.6s ease-out;
      }

      .slide-up {
        animation: slideUp 0.8s ease-out;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      @keyframes slideUp {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes confetti {
        from {
          opacity: 0;
          transform: translate(-50%, -50%) scale(0);
        }
        to {
          opacity: 1;
          transform: translate(-50%, -50%) scale(1);
        }
      }

      @media (max-width: 600px) {
        .success-container {
          padding: 6vw;
        }

        .animation-container {
          width: 25vw;
          height: 25vw;
          max-width: 100px;
          max-height: 100px;
        }

        .transaction-details {
          padding: 5vw;
        }

        .btn {
          padding: 3vw 6vw;
          min-width: 100px;
        }
      }

      @media (min-width: 768px) {
        .success-container {
          padding: 4vw;
        }

        .animation-container {
          width: 120px;
          height: 120px;
        }

        h1 {
          font-size: 28px;
        }

        .subtitle {
          font-size: 16px;
        }

        .detail-label,
        .detail-value {
          font-size: 14px;
        }

        .amount {
          font-size: 18px;
        }

        .btn {
          padding: 12px 24px;
          font-size: 14px;
        }
      }
    </style>
  </head>

  <body>
    <div class="success-container fade-in">
      <div class="animation-container">
        <div id="success-animation" class="success-animation"></div>
      </div>

      <h1 class="slide-up">Banana Token Purchase Successful!</h1>
      <p class="subtitle slide-up">
        Thank you for purchasing Banana Tokens. Your transaction has been
        completed successfully, and your tokens are ready to use!
      </p>

      <div class="transaction-details slide-up">
        <div class="detail-row">
          <span class="detail-label">Transaction ID</span>
          <span class="detail-value"><%= paymentDetails?.transactionId %></span>
        </div>
        <div class="detail-row">
          <span class="detail-label">Date</span>
          <span class="detail-value"><%= paymentDetails?.paymentDate %></span>
        </div>
        <div class="detail-row">
          <span class="detail-label">Payment Method</span>
          <span class="detail-value"
            >•••• •••• •••• <%= paymentDetails?.cardLast4 %></span
          >
        </div>
        <div class="detail-row">
          <span class="detail-label">Total Tokens</span>
          <span class="detail-value amount"
            ><%= paymentDetails?.totalToken %></span
          >
        </div>
        <div class="detail-row">
          <span class="detail-label">Tokens Purchased</span>
          <span class="detail-value amount"><%= paymentDetails?.amount %></span>
        </div>
      </div>
      <div class="button-group slide-up">
        <a href="<%= paymentDetails?.receipt_url %>" class="btn btn-primary">
          <i class="fas fa-receipt"></i> Get Receipt
        </a>
      </div>
    </div>

    <div id="congratulation-animation" class="congratulation-animation"></div>

    <script>
      // Initialize Lottie animations
      let successAnimation;
      let congratulationAnimation;

      // Load success animation
      successAnimation = lottie.loadAnimation({
        container: document.getElementById('success-animation'),
        renderer: 'svg',
        loop: false,
        autoplay: true,
        path: '/ejs/lottie/success.json',
      });

      // Load congratulation animation
      congratulationAnimation = lottie.loadAnimation({
        container: document.getElementById('congratulation-animation'),
        renderer: 'svg',
        loop: false,
        autoplay: true,
        path: '/ejs/lottie/congratulation.json',
      });
    </script>
  </body>
</html>
